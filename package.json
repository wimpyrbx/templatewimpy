{
  "name": "templatewimpy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "tsx watch src/server.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
    "build": "tsc -b && vite build",
    "postbuild": "mkdir -p dist/db && cp *.db dist/db/ && echo 'Database files copied to dist/db/'",
    "backup:dev": "mkdir -p backups/dev && cp *.db backups/dev/$(date +%Y%m%d_%H%M%S)_",
    "backup:prod": "mkdir -p dist/db/backups && cp dist/db/*.db dist/db/backups/$(date +%Y%m%d_%H%M%S)_",
    "clean:backups": "find backups/dev -name '*.db' -type f -printf '%T@ %p\n' | sort -n | head -n -5 | cut -d' ' -f2- | xargs -r rm",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@mantine/core": "^7.14.3",
    "@mantine/hooks": "^7.14.3",
    "@tanstack/react-query": "^5.62.2",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.18.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1",
    "zod": "^3.23.8"
  }
}
